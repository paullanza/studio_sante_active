<div class="container mt-4">
  <div class="row g-4">
    <!-- LEFT: Actions card -->
    <div class="col-12 col-lg-3">
      <h1 class="mb-2">Tableau de bord d’administration</h1>
      <div class="card shadow-sm stretch-card">
        <div class="card-body p-3">
          <h2 class="h6 mb-3">Actions</h2>
          <%= render "admin/actions" %>
        </div>
      </div>
    </div>

    <!-- RIGHT: Tabs header + Card with tab content -->
    <div class="col-12 col-lg-9">
      <div class="tab-header" data-controller="tabs">
        <nav>
          <div class="nav nav-tabs" id="admin-tablist" role="tablist">
            <button
              class="nav-link active"
              id="tab-admin-users"
              type="button"
              role="tab"
              aria-controls="pane-admin-users"
              aria-selected="true"
              data-bs-target="#pane-admin-users"
              data-action="click->tabs#activate">
              Utilisateur·trice·s
            </button>

            <button
              class="nav-link"
              id="tab-admin-codes"
              type="button"
              role="tab"
              aria-controls="pane-admin-codes"
              aria-selected="false"
              data-bs-target="#pane-admin-codes"
              data-action="click->tabs#activate">
              Codes d’accès
            </button>

            <button
              class="nav-link"
              id="tab-admin-ending"
              type="button"
              role="tab"
              aria-controls="pane-admin-ending"
              aria-selected="false"
              data-bs-target="#pane-admin-ending"
              data-action="click->tabs#activate">
              Services (30 prochains jours)
            </button>

            <button
              class="nav-link"
              id="tab-admin-ended"
              type="button"
              role="tab"
              aria-controls="pane-admin-ended"
              aria-selected="false"
              data-bs-target="#pane-admin-ended"
              data-action="click->tabs#activate">
              Services (30 derniers jours)
            </button>
          </div>
        </nav>

        <div class="card shadow-sm stretch-card">
          <div class="card-body p-3 scrollable-card-body">
            <div id="admin-tabcontent">
              <!-- Users (default) -->
              <section id="pane-admin-users" role="tabpanel" aria-labelledby="tab-admin-users">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <h2 class="h6 mb-0">Utilisateur·trice·s</h2>
                </div>
                <div class="table-scroll">
                  <%= render "users/shared/users_table",
                            users: @users,
                            unconfirmed_counts: @unconfirmed_counts,
                            services_touched_counts: @services_touched_counts,
                            show_actions: true %>
                </div>
              </section>

              <!-- Signup Codes -->
              <section class="d-none" id="pane-admin-codes" role="tabpanel" aria-labelledby="tab-admin-codes">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <h2 class="h6 mb-0">Codes d’accès</h2>
                </div>
                <div class="table-scroll">
                  <%= render "shared/signup_codes_table", signup_codes: @signup_codes %>
                </div>
              </section>

              <!-- Services ending soon -->
              <section class="d-none" id="pane-admin-ending" role="tabpanel" aria-labelledby="tab-admin-ending">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <h2 class="h6 mb-0">Services se terminant dans les 30 prochains jours</h2>
                </div>
                <div class="table-scroll">
                  <%= render "fliip_services/shared/services_table", services: @services_ending_soon %>
                </div>
              </section>

              <!-- Services ended recently -->
              <section class="d-none" id="pane-admin-ended" role="tabpanel" aria-labelledby="tab-admin-ended">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <h2 class="h6 mb-0">Services terminés dans les 30 derniers jours</h2>
                </div>
                <div class="table-scroll">
                  <%= render "fliip_services/shared/services_table", services: @services_ended_recent %>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div><!-- /tabs controller scope -->
    </div>
  </div>
</div>
