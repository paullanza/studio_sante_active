<div class="auth-page min-vh-100 d-flex align-items-center justify-content-center p-4">
  <div class="auth-card w-100" style="max-width: 640px;">
    <h1 class="mb-2 fw-bold">Modifier mon profil</h1>

    <div class="mb-4 small text-muted">
      <%= link_to "Retour à mon profil", user_path(resource), class: "link-brand fw-semibold" %>
    </div>

    <%= simple_form_for(resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { method: :put, class: "auth-form" }) do |f| %>

      <%= f.error_notification %>

      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :first_name,
                label: "Prénom",
                input_html: { class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :last_name,
                label: "Nom",
                input_html: { class: "form-control form-control-lg" } %>
        </div>
      </div>

      <div class="row g-3 mt-0">
        <div class="col-md-6">
          <%= f.input :phone,
                label: "Téléphone",
                as: :tel,
                input_html: { autocomplete: "tel", class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :birthday,
                label: "Date de naissance",
                as: :string,
                input_html: { type: "date", max: Date.today, class: "form-control form-control-lg" } %>
        </div>
      </div>

      <!-- Adresse (Mapbox autocomplete; underlying input stays as the model source) -->
      <div class="mb-3">
        <%= f.input :address,
              label: "Adresse",
              input_html: {
                class: "form-control form-control-lg d-none",     # hide real input; Stimulus fills it
                data: { address_autocomplete_target: "address" }
              },
              wrapper_html: {
                class: "position-relative",
                data: {
                  controller: "address-autocomplete",
                  address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
                }
              } %>
      </div>

      <div class="mb-3">
        <%= f.input :email,
              label: "Courriel",
              input_html: { autocomplete: "email", class: "form-control form-control-lg" } %>
      </div>

      <!-- Password section header -->
      <h3 class="h6 mb-2">Changer le mot de passe</h3>

      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :password,
                label: ("Mot de passe" + ( @minimum_password_length ? " (#{@minimum_password_length} caractères min.)" : "" )),
                hint: "Laissez vide pour ne pas changer",
                input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :password_confirmation,
                label: "Confirmer le mot de passe",
                input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.input :current_password,
              label: "Mot de passe actuel",
              hint: "Requis pour confirmer les changements",
              input_html: { autocomplete: "current-password", class: "form-control form-control-lg" } %>
      </div>

      <div class="d-grid mt-4">
        <%= f.button :submit, "Enregistrer",
              class: "btn btn-lg rounded-pill shadow-sm btn-brand" %>
      </div>
    <% end %>

    <hr class="my-4">
    <div class="d-flex flex-wrap gap-2">
      <%= link_to "Annuler", user_path(resource), class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
</div>
