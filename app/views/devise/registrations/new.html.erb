<div class="auth-page min-vh-100 d-flex align-items-center justify-content-center p-4">
  <div class="auth-card w-100" style="max-width: 640px;">
    <h1 class="mb-2 fw-bold">Créer un compte</h1>

    <div class="mb-4 small text-muted">
      Vous avez déjà un compte ?
      <%= link_to "Se connecter", user_session_path, class: "link-brand fw-semibold" %>
    </div>

    <%= simple_form_for(resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { class: "auth-form" }) do |f| %>

      <%= f.error_notification %>

      <div class="mb-3">
        <%= f.input :signup_code_token,
              label: "Code d’accès",
              required: true,
              input_html: { autocomplete: "off", class: "form-control form-control-lg" } %>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :first_name,
                label: "Prénom",
                required: true,
                input_html: { class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :last_name,
                label: "Nom",
                required: true,
                input_html: { class: "form-control form-control-lg" } %>
        </div>
      </div>

      <div class="row g-3 mt-0">
        <div class="col-md-6">
          <%= f.input :phone,
                label: "Téléphone",
                as: :tel,
                input_html: { autocomplete: "tel", class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :birthday,
                label: "Date de naissance",
                as: :string,
                input_html: { type: "date", max: Date.today, class: "form-control form-control-lg" } %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.input :address,
              label: "Adresse",
              input_html: {
                class: "form-control form-control-lg d-none",
                data: { address_autocomplete_target: "address" }
              },
              wrapper_html: {
                class: "position-relative",
                data: {
                  controller: "address-autocomplete",
                  address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
                }
              } %>
      </div>

      <div class="mb-3">
        <%= f.input :email,
              label: "Courriel",
              required: true,
              input_html: { autocomplete: "email", class: "form-control form-control-lg" } %>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :password,
                label: ("Mot de passe" + ( @minimum_password_length ? " (#{@minimum_password_length} caractères min.)" : "" )),
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :password_confirmation,
                label: "Confirmer le mot de passe",
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
        </div>
      </div>

      <div class="d-grid mt-4">
        <%= f.button :submit, "Créer mon compte",
              class: "btn btn-lg rounded-pill shadow-sm btn-brand" %>
      </div>
    <% end %>

  </div>
</div>
