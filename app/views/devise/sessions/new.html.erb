<div class="container-fluid min-vh-100">
    <div class="col-lg-7 d-flex align-items-center justify-content-center p-4 p-lg-5">
      <div class="auth-card w-100" style="max-width: 640px;">
        <h1 class="mb-2 fw-bold">Se connecter</h1>

        <div class="mb-4 small text-muted">
          <% if devise_mapping.registerable? %>
            Besoin d'un compte?
            <%= link_to "Inscrivez-vous maintenant", new_registration_path(resource_name), class: "link-brand fw-semibold" %><br>
          <% end %>
          Besoin de magasiner?
          <%= link_to "Accéder à la boutique en ligne", "#", class: "link-brand fw-semibold" %>
        </div>

        <%= simple_form_for(resource,
              as: resource_name,
              url: user_session_path,            # important: avoids route collision
              html: { class: "auth-form" }) do |f| %>

          <%= f.error_notification %>

          <div class="mb-3">
            <%= f.input :email,
                  label: "Courriel",
                  required: true,
                  input_html: { autocomplete: "email", class: "form-control form-control-lg" } %>
          </div>

          <div class="mb-2">
            <div class="d-flex justify-content-between align-items-center">
              <label for="user_password" class="form-label mb-1">Mot de passe</label>
              <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class: "small link-brand" %>
            </div>
            <%= f.input :password,
                  label: false,
                  required: true,
                  input_html: { autocomplete: "current-password", class: "form-control form-control-lg" } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mt-2 mb-4">
              <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi", wrapper: :vertical_boolean %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.button :submit, "Se connecter",
                  class: "btn btn-brand btn-lg rounded-pill shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
