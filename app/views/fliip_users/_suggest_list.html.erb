<%# List-only variant for inline suggestion containers (no turbo-frame wrapper).
    Each <li> triggers association#pickClient and carries data-id/data-name. %>
<% if @users.any? %>
  <ul class="list-group shadow-sm suggestion-list">
    <% @users.each do |u| %>
      <li
        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        role="option"
        data-action="click->association#pickClient"
        data-id="<%= u.id %>"
        data-name="<%= "#{u.user_firstname} #{u.user_lastname}" %>">
        <span><%= u.user_firstname %> <%= u.user_lastname %></span>
        <small class="text-muted">#<%= u.remote_id %></small>
      </li>
    <% end %>
  </ul>
<% end %>
