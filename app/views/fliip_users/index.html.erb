<div class="container mt-4">
  <h1>Fliip Users</h1>
  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th>Local ID</th>
        <th>Remote ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Contracts</th>
        <th>Services</th>
      </tr>
    </thead>
    <tbody>
      <% @fliip_users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.remote_id %></td>
          <td>
            <%= link_to "#{user.user_firstname} #{user.user_lastname}",
                        fliip_user_path(user),
                        class: "btn btn-sm btn-primary" %>
          </td>
          <td><%= user.user_email.presence || "–" %></td>
          <td><%= user.user_status.presence || "–" %></td>
          <td><%= user.fliip_contracts.count %></td>
          <td><%= user.fliip_services.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
