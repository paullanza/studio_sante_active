<div class="container mt-4">
  <h1>Fliip Users</h1>

  <div class="d-flex justify-content-between align-items-center mb-2">
    <div class="text-muted small">
      Page <%= @pagy.page %> of <%= @pagy.pages %> — <%= @pagy.count %> clients
    </div>
    <div><%== pagy_bootstrap_nav(@pagy) %></div>
  </div>

  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th>Local ID</th>
        <th>Remote ID</th>
        <th>Name</th>
        <th>Member Type</th>
        <th>Email</th>
        <th>Status</th>
        <th>Contracts</th>
        <th>Services</th>
      </tr>
    </thead>
    <tbody>
      <% @fliip_users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.remote_id %></td>
          <td>
            <%= link_to "#{user.user_firstname} #{user.user_lastname}",
                        fliip_user_path(user),
                        class: "btn btn-sm btn-primary" %>
          </td>
          <td><%= user.member_type || "–" %></td>
          <td><%= user.user_email || "–" %></td>
          <td><%= user.user_status || "–" %></td>
          <td><%= user.fliip_contracts.size %></td>
          <td><%= user.fliip_services.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-end">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
