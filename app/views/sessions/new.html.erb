<div class="container mt-4" data-controller="filter-services">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">New Session</h1>
    <%= button_to "Refresh Clients",
                  refresh_clients_path,
                  method: :post,
                  class: "btn btn-outline-secondary btn-sm",
                  form: { data: { turbo_confirm: "This will refresh the client list from Fliip. Continue?" } } %>
  </div>

  <%= simple_form_for @session, html: { class: "mb-4" } do |f| %>
    <%= f.error_notification %>

    <div class="mb-3 d-flex gap-3 align-items-end flex-wrap">
      <div class="flex-fill">
        <%= f.input :fliip_user_id,
          label: "Client",
          as: :select,
          collection: @fliip_users,
          value_method: :id,
          label_method: ->(u) { "#{u.user_lastname.strip}, #{u.user_firstname.strip}" },
          include_blank: "Select a client",
          input_html: {
            class: "form-select",
            data: {
              filter_services_target: "userSelect",
              action: "change->filter-services#onUserChange"
            }
          } %>
      </div>

      <div class="flex-fill">
        <%= f.input :fliip_service_id,
          label: "Service",
          as: :select,
          collection: [], # Stimulus will populate
          include_blank: false,
          input_html: {
            class: "form-select",
            disabled: true,
            "data-filter-services-target": "serviceSelect"
          } %>
      </div>

      <div class="form-check mt-4">
        <%= f.check_box :present, class: "form-check-input", id: "session_present" %>
        <%= f.label :present, "Présent", class: "form-check-label", for: "session_present" %>
      </div>

      <!-- Half-hour (non-model) -->
      <div class="form-check mt-4">
        <%= check_box_tag :half_hour, "1", params[:half_hour] == "1", class: "form-check-input", id: "half_hour" %>
        <%= label_tag :half_hour, "Half Hour (30 min)", class: "form-check-label" %>
      </div>
    </div>

    <div class="mb-3 d-flex gap-3">
      <div class="flex-fill">
        <%= f.input :date,
          label: "Date",
          as: :string,
          input_html: {
            type: "date",
            value: (@session.date || Date.today),
            class: "form-control"
          } %>
      </div>

      <div class="flex-fill">
        <%= f.input :time,
          label: "Time",
          as: :select,
          collection: (6..20).flat_map { |h| ["%02d:00" % h, "%02d:30" % h] },
          selected: (@session.time&.strftime("%H:%M") || Time.current.strftime("%H:%M")),
          include_blank: false,
          input_html: { class: "form-select" } %>
      </div>
    </div>

    <%= f.input :note, as: :text, label: "Note", input_html: { rows: 1, class: "form-control" } %>

    <%= f.button :submit, "Create Session", class: "btn btn-primary" %>
  <% end %>

  <hr>

  <!-- Services table (populated after a client is selected) -->
  <div class="mt-3">
    <h2 class="mb-3">Client Services</h2>

    <div data-filter-services-target="status" class="text-muted small mb-2" hidden>
      Loading services…
    </div>
    <div data-filter-services-target="error" class="alert alert-danger py-2 px-3" hidden></div>

    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>Purchase #</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>Expire Date</th>
            <th>Purchase Date</th>
            <th>Stop Date</th>
            <th>Cancel Date</th>
            <th>Service Name</th>
            <th>Duration</th>
            <th style="min-width: 260px;">Progress</th>
          </tr>
        </thead>
        <tbody data-filter-services-target="servicesTbody">
          <!-- Initial placeholder row; Stimulus will replace with actual rows -->
          <tr data-filter-services-target="emptyRow" class="text-muted">
            <td colspan="10">Select a client to view services.</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <hr>
  <h2>Unconfirmed Sessions</h2>

  <% if current_user.sessions.unconfirmed.any? %>
    <table class="table table-bordered table-striped mt-3">
      <thead class="table-light">
        <tr>
          <th>Client</th>
          <th>Service</th>
          <th>Date</th>
          <th>Time</th>
          <th>Duration</th>
          <th>Présence</th>
          <th>Type</th>
          <th>Note</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.sessions.unconfirmed.each do |session| %>
          <tr>
            <td><%= session.fliip_user.user_firstname %> <%= session.fliip_user.user_lastname %></td>
            <td><%= session.fliip_service.service_name %></td>
            <td><%= session.date&.strftime("%d/%m/%Y") || "—" %></td>
            <td><%= session.time&.strftime("%H:%M") || "—" %></td>
            <td><%= session.duration_display %></td>
            <td><%= session.present? ? "Présent·e" : "Absent·e" %></td>
            <td><%= session.session_type.capitalize %></td>
            <td><%= session.note.presence || "—" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No unconfirmed sessions.</p>
  <% end %>
</div>
