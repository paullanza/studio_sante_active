<div class="container mt-4">
  <h1 class="mb-3">Modifier le profil de <%= @user.full_name %></h1>

  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>

    <div class="row g-3">
      <div class="col-md-6"><%= f.input :first_name, label: "Prénom" %></div>
      <div class="col-md-6"><%= f.input :last_name,  label: "Nom" %></div>
    </div>

    <div class="row g-3">
      <div class="col-md-6"><%= f.input :phone, as: :tel, label: "Téléphone" %></div>
      <div class="col-md-6"><%= f.input :birthday, as: :string, input_html: { type: "date" }, label: "Date de naissance" %></div>
    </div>

    <%= f.input :address, label: "Adresse" %>
    <%= f.input :email,   label: "Courriel" %>

    <div class="d-grid mt-4">
      <%= f.button :submit, "Enregistrer", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Annuler", user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
</div>
