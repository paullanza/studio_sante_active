<div class="container mt-4">
  <div class="row g-4">
    <!-- LEFT: Header + Profile -->
    <div class="col-12 col-lg-3">
      <div class="mb-2 d-flex justify-content-between align-items-center">
        <h1 class="mb-0"><%= @user.full_name %></h1>
      </div>

      <div class="card shadow-sm stretch-card">
        <div class="card-body p-3">
          <div class="mb-3 d-flex flex-wrap gap-2">
            <span class="badge <%= @user.super_admin? ? 'bg-dark' : @user.admin? ? 'bg-primary' : @user.manager? ? 'bg-info text-dark' : 'bg-secondary' %>">
              <%= @user.translated_role %>
            </span>
            <span class="badge <%= @user.active? ? 'bg-success' : 'bg-secondary' %>">
              <%= @user.active? ? "Actif·ve" : "Inactif·ve" %>
            </span>
          </div>

          <div class="mb-3">
            <div class="text-muted small">Courriel</div>
            <div><%= @user.email.present? ? mail_to(@user.email) : "—" %></div>
          </div>

          <div class="mb-3">
            <div class="text-muted small">Téléphone</div>
            <div><%= @user.phone.presence || "—" %></div>
          </div>

          <div class="mb-3">
            <div class="text-muted small">Date de naissance</div>
            <div><%= @user.birthday&.strftime("%d/%m/%Y") || "—" %></div>
          </div>

          <div class="mb-3">
            <div class="text-muted small">Adresse</div>
            <div class="text-wrap" title="<%= @user.address.to_s %>">
              <%= @user.address.presence || "—" %>
            </div>
          </div>

          <!-- Role / Activation controls -->
          <div class="mt-3">
            <% if @user.super_admin? %>
              <span class="text-muted small">—</span>
            <% elsif current_user.super_admin? %>
              <div class="d-flex flex-wrap gap-2">
                <% if @user.admin? %>
                  <%= button_to "Nommer gestionnaire", make_manager_user_path(@user), method: :patch, class: "btn btn-outline-primary btn-sm" %>
                <% elsif @user.manager? %>
                  <%= button_to "Nommer employé·e", make_employee_user_path(@user), method: :patch, class: "btn btn-outline-secondary btn-sm" %>
                  <%= button_to "Nommer admin",    make_admin_user_path(@user),    method: :patch, class: "btn btn-outline-dark btn-sm" %>
                <% else %>
                  <%= button_to "Nommer gestionnaire",  make_manager_user_path(@user),  method: :patch, class: "btn btn-outline-primary btn-sm" %>
                <% end %>

                <%= button_to(
                      @user.active? ? "Désactiver" : "Réactiver",
                      @user.active? ? deactivate_user_path(@user) : activate_user_path(@user),
                      method: :patch,
                      class: "btn btn-sm #{ @user.active? ? 'btn-outline-danger' : 'btn-outline-success' }"
                ) %>
              </div>

            <% elsif current_user.admin? %>
              <% if @user.admin? %>
                <span class="text-muted small">Admin</span>
              <% elsif @user.manager? %>
                <div class="d-flex flex-wrap gap-2">
                  <%= button_to "Nommer employé·e", make_employee_user_path(@user), method: :patch, class: "btn btn-outline-secondary btn-sm" %>
                  <%= button_to(
                        @user.active? ? "Désactiver" : "Réactiver",
                        @user.active? ? deactivate_user_path(@user) : activate_user_path(@user),
                        method: :patch,
                        class: "btn btn-sm #{ @user.active? ? 'btn-outline-danger' : 'btn-outline-success' }"
                  ) %>
                </div>
              <% else %>
                <div class="d-flex flex-wrap gap-2">
                  <%= button_to "Nommer gestionnaire",  make_manager_user_path(@user),  method: :patch, class: "btn btn-outline-primary btn-sm" %>
                  <%= button_to(
                        @user.active? ? "Désactiver" : "Réactiver",
                        @user.active? ? deactivate_user_path(@user) : activate_user_path(@user),
                        method: :patch,
                        class: "btn btn-sm #{ @user.active? ? 'btn-outline-danger' : 'btn-outline-success' }"
                  ) %>
                </div>
              <% end %>
            <% elsif current_user.manager? && @user.employee? %>
              <%= button_to(
                    @user.active? ? "Désactiver" : "Réactiver",
                    @user.active? ? deactivate_user_path(@user) : activate_user_path(@user),
                    method: :patch,
                    class: "btn btn-sm #{ @user.active? ? 'btn-outline-danger' : 'btn-outline-success' }"
              ) %>
            <% end %>
          </div>

          <!-- Edit button -->
          <div class="mt-3">
            <% if @user.editable_by?(current_user) %>
              <div class="d-grid">
                <% if @user == current_user %>
                  <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-outline-primary" %>
                <% else %>
                  <%= link_to "Modifier le profil", edit_user_path(@user), class: "btn btn-outline-primary" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT: Tabs (header) + Card (content) -->
    <div class="col-12 col-lg-9">
      <!-- Tabs header ABOVE the card -->
      <div class="tab-header" data-controller="tabs">
        <nav>
          <div class="nav nav-tabs" id="user-tablist" role="tablist">
            <button
              class="nav-link active"
              id="tab-services"
              type="button"
              role="tab"
              aria-controls="pane-services"
              aria-selected="true"
              data-bs-target="#pane-services"
              data-action="click->tabs#activate">
              Services
            </button>

            <button
              class="nav-link"
              id="tab-sessions"
              type="button"
              role="tab"
              aria-controls="pane-sessions"
              aria-selected="false"
              data-bs-target="#pane-sessions"
              data-action="click->tabs#activate">
              Séances non confirmées
            </button>
          </div>
        </nav>

        <!-- Card with the tab content -->
        <div class="card shadow-sm stretch-card">
          <div class="card-body p-3 scrollable-card-body">
            <div id="user-tabcontent">
              <!-- Services (visible by default) -->
              <section id="pane-services" role="tabpanel" aria-labelledby="tab-services">
                <!-- Turbo Frame: filters + table update together -->
                <%= turbo_frame_tag "services_frame", target: "_top" do %>
                  <!-- Filters -->
                  <div class="mb-2">
                    <%= form_with url: user_path(@user), method: :get, local: true,
                          html: {
                            "data-controller" => "autosubmit",
                            "data-action" => "change->autosubmit#submit",
                            "data-turbo-frame" => "services_frame"
                          } do |f| %>
                      <div class="d-flex flex-wrap align-items-center gap-3">
                        <div class="form-check">
                          <%= check_box_tag :show_inactive, "1", params[:show_inactive] == "1",
                                class: "form-check-input", id: "filter_show_inactive" %>
                          <%= label_tag :show_inactive, "Afficher Inactifs", class: "form-check-label" %>
                        </div>

                        <div class="form-check">
                          <%= check_box_tag :show_cancelled, "1", params[:show_cancelled] == "1",
                                class: "form-check-input", id: "filter_show_cancelled" %>
                          <%= label_tag :show_cancelled, "Afficher Annulés", class: "form-check-label" %>
                        </div>

                        <div class="form-check">
                          <%= check_box_tag :hide_stopped, "1", params[:hide_stopped] == "1",
                                class: "form-check-input", id: "filter_hide_stopped" %>
                          <%= label_tag :hide_stopped, "Masquer Suspendus", class: "form-check-label" %>
                        </div>
                      </div>
                    <% end %>
                  </div>

                  <div class="table-scroll">
                    <%= render "fliip_services/shared/services_table", services: @services_for_user %>
                  </div>
                <% end %>
              </section>

              <!-- Unconfirmed sessions -->
              <section class="d-none" id="pane-sessions" role="tabpanel" aria-labelledby="tab-sessions">
                <%= turbo_frame_tag "user_sessions_frame", target: "_top" do %>
                  <!-- Filters -->
                  <div class="mb-2">
                    <%= form_with url: user_path(@user), method: :get, local: true,
                          html: {
                            "data-controller" => "autosubmit",
                            "data-action" => "change->autosubmit#submit",
                            "data-turbo-frame" => "user_sessions_frame"
                          } do %>

                      <div class="d-flex flex-wrap align-items-center gap-3">
                        <!-- Présence -->
                        <div>
                          <label class="form-label d-block mb-1 small">Présence</label>
                          <div class="form-check form-check-inline">
                            <%= check_box_tag "present[]", "yes",
                                  Array(params[:present]).include?("yes"),
                                  id: "present_yes", class: "form-check-input" %>
                            <%= label_tag "present_yes", "Oui", class: "form-check-label" %>
                          </div>
                          <div class="form-check form-check-inline">
                            <%= check_box_tag "present[]", "no",
                                  Array(params[:present]).include?("no"),
                                  id: "present_no", class: "form-check-input" %>
                            <%= label_tag "present_no", "Non", class: "form-check-label" %>
                          </div>
                        </div>

                        <!-- Type -->
                        <div>
                          <label class="form-label d-block mb-1 small">Type</label>
                          <div class="form-check form-check-inline">
                            <%= check_box_tag "session_type[]", "paid",
                                  Array(params[:session_type]).include?("paid"),
                                  id: "type_paid", class: "form-check-input" %>
                            <%= label_tag "type_paid", "Chargée", class: "form-check-label" %>
                          </div>
                          <div class="form-check form-check-inline">
                            <%= check_box_tag "session_type[]", "free",
                                  Array(params[:session_type]).include?("free"),
                                  id: "type_free", class: "form-check-input" %>
                            <%= label_tag "type_free", "Absence", class: "form-check-label" %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>

                  <% if @unconfirmed_sessions.any? %>
                    <div class="table-scroll">
                      <%= render "sessions/shared/sessions_table",
                            sessions: @unconfirmed_sessions,
                            show_bulk_checkbox: false,
                            scope_name: :new_session %>
                    </div>
                  <% else %>
                    <p class="text-muted small mb-0">Aucune séance non confirmée.</p>
                  <% end %>
                <% end %>
              </section>
            </div>
          </div>
        </div>
      </div><!-- /tabs controller scope -->
    </div>
  </div>
</div>
